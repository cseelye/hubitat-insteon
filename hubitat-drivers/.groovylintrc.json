{
    "extends": "all",
    "rules": {
        "CatchException": {
            "enabled": false
        },
        "CompileStatic": {
            "enabled": false
        },
        "ConsecutiveBlankLines": {
            "enabled": false
        },
        "DuplicateNumberLiteral": {
            "enabled": false
        },
        "DuplicateStringLiteral": {
            "enabled": false
        },
        "FactoryMethodName": {
            "enabled": false
        },
        "InvertedIfElse": {
            "enabled": false
        },
        "LineLength": {
            "length": 130
        },
        "SpaceAroundMapEntryColon": {
            "enabled": false
        }
    }
}